<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1 class="text-center">Add Product</h1>
        <form action="/products/addproduct" method="post" >
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="described">Described</label>
                <textarea name="described" id="described" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" class="form-control">
            </div>
            <div class="form-group">
                <label for="image">Link image</label>
                <input type="text" name="image" id="image" class="form-control">
            </div>
            <div class="form-group">
                <label for="category_id">Category</label>
                <select name="category_id">
                {{# each category}}
                {{# each this}}
  <option name="category_id" id="category_id" value={{this._id}}>{{this.name}}</option>
                {{/each}}
                {{/each}}
</select>
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
            
        </form>
    </div>
</div>