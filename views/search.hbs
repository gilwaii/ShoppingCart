{{# each products}}
  <div class="row">
      {{# each this}}
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <a href = "/products/{{this._id}}">
        <img src="{{this.image}}" alt="...">
        <div class="caption">
          <h3>{{this.name}}</h3>
          </div>
          </a>
      </div>
    </div>
    {{/each}}
  </div>
{{/each}}